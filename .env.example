# Environment Variables for Brent Oil Analysis Project

# Flask Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=dashboard/backend/app.py

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_TIMEOUT=300

# Database Configuration (if using database instead of files)
# DATABASE_URL=sqlite:///data/analysis.db

# React Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development

# Data Paths
DATA_PATH=data/
EVENTS_PATH=data/events/
RESULTS_PATH=results/

# Analysis Configuration
MCMC_DRAWS=2000
MCMC_TUNE=2000
MCMC_CHAINS=2

# For development/demo (faster settings)
DEMO_MODE=true
DEMO_MCMC_DRAWS=500
DEMO_MCMC_TUNE=500
DEMO_SAMPLE_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security (if implementing authentication)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# External APIs (if integrating with external data sources)
# ALPHA_VANTAGE_API_KEY=your-api-key
# QUANDL_API_KEY=your-api-key

# Performance Settings
MAX_WORKERS=4
CACHE_TIMEOUT=3600